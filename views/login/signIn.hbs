<form action="/signIn" method="POST" style="border:1px solid #ccc">
  <div class="container">
    <h1>Sign Up</h1>
    <p>Please fill in this form to create an account.</p>
    {{#if loginErr}}
    <p style="color: crimson;">{{loginErr}}</p>
    {{/if}}

    <label  for="email"><b>email</b></label>
    <input type="text" placeholder="Enter Email" name="email" required>

    <label for="psw"><b>password</b></label>
    <input type="password" placeholder="Enter Password" name="password" required>

   
      <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
    </label>

    <p>By creating an account you agree to our <a href="/signUp" style="color:dodgerblue">Terms & Privacy</a>.</p>

    <div class="clearfix">
     <a href="/signUp">cerate an account</a>
      <button type="submit" class="signupbtn">signIn</button>
    </div>
  </div>
</form>